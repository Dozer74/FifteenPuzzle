<UserControl x:Class="FifteenPuzzle.UserControls.Block"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FifteenPuzzle"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Border Name="Border" BorderThickness="2" BorderBrush="Black" Margin="2" CornerRadius="10">
            <Border.Background>
                <RadialGradientBrush>
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FFDEDEDE" Offset="1"/>
                </RadialGradientBrush>
            </Border.Background>
            <TextBlock Name="TbNumber" VerticalAlignment="Center" HorizontalAlignment="Center" Text="15" FontFamily="Calibri Light" FontSize="64"/>
        </Border>
    </Grid>
</UserControl>
